/**Header Style**/
.header h1{
	font-size: 60px;
	font-weight: 600;
	margin: 0;
	text-align: center;
	font-family: Roboto, sans-serif !important;
}
#headerSlogan{
	font-size: 30px;
}

.header{
	background: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.6)), url(hanoiheader.jpeg);
	background-repeat: no-repeat;
	background-position: center center;
	-webkit-background-size:  cover;
	background-size: cover;
	width: 100%;
	height: 45vh;
	display: -webkit-flex;
	display: -moz-flex;
	display:  -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-flow: column;
	text-align: center;
	color: white;

}
/*Apply for large laptops and desktop*/
@media only screen  and (min-width: 1600px){
.header h1{
	font-size: 70px;
}
#headerSlogan{
	font-size: 30px;
}
}

/*Cafe Name 1 Styles*/
.cafe1{
	margin: 5% 0 10% 5%;
	width: 92%;
	height: 500px;
	padding: 24px;
	background: #fff;
	position: relative;
	display: flex;
	align-items: flex-end;
	transition: .6s ease-out;
	box-shadow: 0 10px 10px rgba(0,0,0,0.5);
	text-transform: uppercase;
}

#cafe1Image, .cafe1Infor{
	float: left;
	width: 100%;
	margin: 10%;
}

#cafe1Image{
	height:500px;
	width: 500px;
	padding-top: 5%;
	padding-bottom: 5%;
}

.cafe1Infor{
	margin-left: 10%;
	width: 50%;
	font-size: 20px;
}

.cafe1Infor h3 {
	font-size: 30px;
	margin-bottom: 2%;
}

.cafe1Infor h3 a {
	text-decoration: none;
	color: #5C3317;
	font-weight: 700;
}

#cafe1Image:hover{
	opacity: 0.85;
}

.cafe1::after{
	clear: both;
	content: "";
	display: table;
}
/*Apply for large laptops and desktop*/
@media only screen  and (min-width: 1600px){
.cafe1{
	height: 550px;
	padding: 10px;
}
#cafe1Image{
	width: 110%;
	height:450px;
}
#cafe1Image:hover{
	opacity: 0.7;
}
}

/*Cafe Styles*/
.cafe2, .cafe3 ,.cafe4 {
	float: left;
}

.cafes{
	padding: 5%;
}

#cafe2Image, #cafe3Image, #cafe4Image{
	width:100%;
	height:400px;
	padding-right:2%;
	display: block;
}

.cafe2{
	margin-bottom:5%;
	width: 30%;
	height: 400px;
	padding: 24px;
	background: #fff;
	position: relative;
	display: flex;
	align-items: flex-end;
	transition: .6s ease-out;
	box-shadow: 0 10px 30px rgba(0,0,0,0.5);
	text-transform: uppercase;
}

 .cafe3, .cafe4{
 	margin-left: 5%;
 	margin-bottom: 10%;
	width: 30%;
	height: 400px;
	padding: 24px;
	background: #fff;
	position: relative;
	display: flex;
	align-items: flex-end;
	transition: .6s ease-out;
	box-shadow: 0 20px 20px rgba(0,0,0,0.5);
	text-transform: uppercase;
 }

.cafe2:hover, .cafe3:hover, .cafe4:hover {
	transform: translateY(15px);
}

.cafe2:hover:before, .cafe3:hover:before, .cafe4:hover:before {
	opacity: 1;
}

.cafe2:hover .cafe2Infor, .cafe3:hover .cafe3Infor, .cafe4:hover .cafe4Infor{
	opacity: 1;
	transform: translateY(0);
}

.cafe2:before, .cafe3:before, .cafe4:before{
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	display: block;
	width: 100%;
	height: 100%;
	background: linear-gradient(to top, #000, transparent);
	z-index: 2;
	transition: 0.5s;
	opacity: 0;
}

#cafe2Image, #cafe3Image, #cafe4Image{
	width: 110%;
	height: 110%;
	position: absolute;
	top:0;
	left: 0;
	object-fit:cover;
}

.cafe2 .cafe2Infor, .cafe3 .cafe3Infor, .cafe4 .cafe4Infor{
	position: relative;
	z-index: 3;
	color: #fff;
	opacity: 0;
	transform: translateY(100px);
	transition: 0.5s;
}

.cafe2Infor h3, .cafe3Infor h3, .cafe4Infor h3{
	margin: 0; 
	letter-spacing: px;
}
.cafe2Infor #cafe2Intro, .cafe3Infor #cafe3Intro, .cafe4Infor #cafe4Intro{
	letter-spacing: 1px;
	font-size: 20px;
	margin-top: 8px;
}

.cafe2Infor h3 a, .cafe3Infor h3 a, .cafe4Infor h3 a{
	text-decoration: none;
	color: white;
	font-size: 20px;
}


.cafes::after{
	clear: both;
	content: "";
	display: table
}
/*Apply for large laptops and desktop*/
@media only screen  and (min-width: 1600px){
#cafe2Image, #cafe3Image, #cafe4Image{
	width:105%;
	height:480px;
}
.cafe2, .cafe3, .cafe4{
	height:450px;
}
}