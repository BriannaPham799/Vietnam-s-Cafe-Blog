}

.home_Saigon::after{
	content: "";
	clear: both;
	display: table;
}
/*Apply for large laptops and desktop*/
@media only screen  and (min-width: 1600px){
#saigonImage{
	margin: 1% 6% 5% 0;
	width:43%;
	height:480px;
}
#saigonIntro{
	font-size: 30px;
}
}
/**Top10**/
#top10Image, #top10Intro{
	float: left;
}

#top10Image{
	margin-left: 5%;
	margin-right: 1%;
	width: 45%;
	height: 400;
}

#top10Intro{
	background-color: rgb(119, 80, 73);
