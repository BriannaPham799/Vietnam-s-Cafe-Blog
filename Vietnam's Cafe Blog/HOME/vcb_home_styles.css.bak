/**Lastest Reviews**/
.home_LastestReviews{
	padding: 3% 0 5% 8%;
	font-size: 28px;
	background-color: rgb(119, 80, 73);
	width: 100%;
	height: 50%;
	color: white;
}

.lastestReviewsIntro{
	text-align: left;
	margin-left: 0.8%;
}

.lastestReviewsIntro h3{
	text-align: left;
	text-decoration: none;
	color: white;
	font-size: 45px;
	font-weight: 500;
	font-family: Roboto, sans-serif !important;
	
}

 .lastestReviewsTitle p a{
 	text-decoration: none;
 	font-weight: 500;
 	color: white;
 	font-size: 28px;
	font-family: Roboto, sans-serif !important;
 }
.lastestReviewsImage img{
	width: 30%;
	height: 450px;
	float: left;
	padding: 5px;
}

.lastestReviewsImage::after{
	content: "";
	clear: both;
	display: table;
}
.lastestReviewsTitle p{
	float: left;
}

.lastestReviewsTitle p:first-child{
	margin-left:2.5%;
}

.lastestReviewsTitle p:nth-child(2), .lastestReviewsTitle p:last-child {
	margin-left: 18.5%;
} 
#lastestReviewsImage1:hover, #lastestReviewsImage2:hover, #lastestReviewsImage3:hover{
	opacity: 0.5;
}

.home_LastestReviews::after{
	content: "";
	clear: both;
	display: table;
}

/*Apply for large laptops and desktop*/
@media only screen  and (min-width: 1600px){

.home_LastestReviews{
	padding: 3% 0 5% 10%;
	font-size: 25px;
	background-color: rgb(119, 80, 73);
	width: 100%;
	height: 50%;
	color: white;
}

.lastestReviewsImage img{
	width: 30%;
	height: 550px;
	float: left;
	padding: 15px;
}

.lastestReviewsTitle p:nth-child(2), .lastestReviewsTitle p:last-child {
	margin-left: 20%;
} 
}

/*Contact form*/
.contactFormAll {
	text-align: center;
	color: #111111;
	background-color: #f2f2f2;
	display: table;
	clear: both;
	position: relative;
	width: 50%;
	margin: 0 auto;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding-bottom: 2%;
}

.contactFormDiv {
	display: flex;
	flex-direction: column;
	justify-content: center;
	text-align: center;
	color: #111111;
	background-color: #f2f2f2;
}

.contactTitle {
	font-size: 35px;
	font-family: inherit;
	font-weight: 700;
	margin: 60px auto 0;
	line-height: inherit;
	letter-spacing: inherit;
	text-transform: inherit;
	display: table;
	align-self: flex-start;
}

.contactForm {
	margin-bottom: 20px;
	padding-left: 20px;
	width: calc(100% +  20px);
	align-items: flex-end;
}

.contactInfo {
	margin-bottom: 50px;
	padding-left: 50px;
	padding-right: 25px;
	text-align: start;
}

.inputLabel {
	display: none !important;
	margin-top: 0;
	margin-bottom: 0;
	margin-left: 5px;
}

.guessInput {
	border-width: 2px;
	border-color: #000000;
	stroke: #000000;
	border-left-width: 0;
	border-left-style: none;
	border-right-width: 0;
	border-right-style: none;
	border-top-width: 0;
	border-top-style: none;
	display: block;
	width: 90%;
	padding: 10px 12px;
	background-image: none;
	background-clip: padding-box;
	border-radius: 3px;
	transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
	background-color: transparent;
	color: inherit;
	height: auto;
	font-size: 25px;
	font-family: Arial, sans-serif !important;
}

.buttonDiv {
	text-align: center;
	text-align: start;
	display: flex;
	justify-content: center;
	flex-grow: 0;
	margin-right: 0;
}

.submitButton {
  border-width: 2px;
  color: #000000 !important;
  background-color: transparent !important;
  display: table;
  cursor: pointer;
  font-size: inherit;
  line-height: inherit;
  letter-spacing: inherit;
  text-transform: inherit;
  font-weight: inherit;
  text-decoration: none;
  outline-width: 0;
  -webkit-text-decoration-skip: objects;
  font-style: initial;
  white-space: nowrap;
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
  vertical-align: middle;
  text-align: center;
  padding: 10px 30px;
  align-self: flex-start;
  margin-top: 1px;
  margin-bottom: 1px;
  position: relative;
  font-family: Arial, sans-serif !important;
  background-image: none;
  border-style: solid;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.submitHidden {
	display: none !important;
}

.successMessage, .errorMessage {
	z-index: 1;
	display: none;
	position: absolute;
	bottom: 0px;
	left: 0px;
	width: 100%;
	text-align: center;
	color: #fff;
	padding: 20px 0px 20px 0px;
	border: none;
}

.successMessage {
	background: #62C584;
	}
	
.errorMessage {
	background: #F95D51;

}
