/**Drink Suggestions**/
#drinkSuggestionsImage{
	margin-top: 5%;
	margin-left: 5%;
	width:89%;
	height:450px;

}


#drinkSuggestionsTitle a{
	text-decoration: none;
	text-align: center;
	color: #5C3317;
