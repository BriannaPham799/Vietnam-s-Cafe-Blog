/**Header Style**/
.header h1{
	font-size: 60px;
	font-weight: 600;
	margin: 0;
	text-align: center;
	font-family: Roboto, sans-serif !important;
}
#headerSlogan{
	font-size: 30px;
}

.header{
	background: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.6)), url(vcb_header.jpg);
	background-repeat: no-repeat;
	background-position: center center;
	-webkit-background-size:  cover;
	background-size: cover;
	width: 100%;
	height: 45vh;
	display: -webkit-flex;
	display: -moz-flex;
	display:  -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-flow: column;
	text-align: center;
	color: white;

}

/**Body Style**/
/**Hanoi**/
#hanoiImage, #hanoiIntro{
	float: left;
}
#hanoiImage{
	width: 44%;
	height: 400px;
	margin: 5% 0 0 6%;
}

#hanoiIntro{
	margin-left: 4%;
	padding-top: 10%;
	width: 40%;
	height: 350px;
	vertical-align: baseline;
	font-size: 22px;
	font-weight: normal;

}

#hanoiIntro h3 a{
	text-decoration: none;
	color: #6b4748 !important;
	font-family: Roboto, sans-serif !important;
	font-size: 30px;
}

.home_Hanoi::after{
	content: "";
	clear: both;
	display: table;
}
/*Apply for large laptops and desktop*/
@media only screen  and (min-width: 1600px){
#hanoiImage{
	width: 44%;
	height: 450px;
	margin: 5% 0 0 6%;
}
#hanoiIntro{
	font-size: 30px;
}
}
/**Saigon**/
