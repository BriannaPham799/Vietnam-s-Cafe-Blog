/**Header Style**/
.header h1{
	font-size: 6vw;
	font-weight: 600;
	margin: 0;
	text-align: center;
	font-family: Roboto, sans-serif !important;
}

.header{
	background: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.6)), url(top10header.png);
	background-repeat: no-repeat;
	background-position: center center;
	-webkit-background-size:  cover;
	background-size: cover;
	width: 100%;
	height: 45vh;
	display: -webkit-flex;
	display: -moz-flex;
	display:  -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-flow: column;
	text-align: center;
	color: white;

}

/*Intro*/
.top10_IntroSection {
	text-align: left;
	content: '';
	display: table;
	position: relative;
	margin: 5% 5% auto 5%;
}

/*Top 5 - Hanoi*/
.top5_hanoi{
	width: 90%;
	margin: 5% 0 10% 5%;
	padding: 2%;
	height: auto;
	border-radius: 2%;
	background-color: rgba(242, 242, 242, 0.5);
	box-shadow: 0 10px 10px #000;
}

.top5_hanoi h2{
	color: #5C3317;
	font-size: 5vw;
	font-weight: bold;
	margin-bottom: 2%;
}

.hanoi_top1_cafe,.hanoi_top2_cafe,.hanoi_top3_cafe, 
.hanoi_top4_cafe,.hanoi_top5_cafe{
	width: 100%;
	height: auto;
	margin-bottom: 5%;
}

.hanoi_top1_cafe:hover, .hanoi_top2_cafe:hover, .hanoi_top3_cafe:hover,
.hanoi_top4_cafe:hover, .hanoi_top5_cafe:hover{
	transition:  1s;
	box-shadow: 0 10px 20px #000;
}
/*hanoi_top1_cafe*/
#hanoi_top1_image{
	width:30vw;
	height:35vw;
}
#hanoi_top1_image, #hanoi_top1_cafe_Info{
	float: left;
}

#hanoi_top1_cafe_Info{
	margin-left: 10%;
	font-size: 3vw;
}

#hanoi_top1_cafe_Info h3{
	font-size: 4vw;
	margin-bottom: 5%;
	color: #5C3317;
}

.hanoi_top1_cafe::after{
	clear: both;
	display: table;
	content: "";
}

